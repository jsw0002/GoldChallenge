            {
                <p>Yes</p>
            }
            else
            {
                <p>No</p>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SpouseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentOccupation)
        </td>
