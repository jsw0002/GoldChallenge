        <td>
            @Html.DisplayFor(modelItem => item.InvestmentSource)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NetWorth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DesiredMarket)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WhyAreYouLookingAtBusinesses)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LengthOfTimeLooking)
        </td>
        <td>
            @if (item.SpokenWithAnyoneElse == true)
            {
                <p>Yes</p>
            }
            else
            {
                <p>No</p>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustomerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CustomerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CustomerID })
        </td>
    </tr>
}

</table>
